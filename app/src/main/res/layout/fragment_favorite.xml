<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.favorites.Fav_fragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/border"
        android:textColor="@color/black"
        android:fontFamily="@font/petrona"
        android:textSize="25dp"
        android:ems="10"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    <ImageButton
        android:id="@+id/search"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_baseline_search_24"
        android:layout_marginStart="340dp"
        android:layout_marginLeft="340dp"

        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_baseline_cancel_24"
        android:layout_marginStart="340dp"
        android:visibility="gone"
        android:layout_marginLeft="340dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/nofav_image"
        android:layout_width="267dp"
        android:layout_height="367dp"
        android:layout_gravity="center"
        android:src="@drawable/sad_hero" />

    <TextView
        android:id="@+id/nofav_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/flavors"
        android:gravity="center"
        android:text="No Favorites yet......."
        android:textColor="#FF0202"
        android:textSize="30sp"
        android:textStyle="bold" />

</FrameLayout>